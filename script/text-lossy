#!/usr/bin/env perl

use strict;
use warnings;
use open ':std', IO => ':utf8'; # all is utf8!

use Text::Lossy;

my $lossy = Text::Lossy->new();
# We'll start with three "sensible" filters.
$lossy->add(qw( lower punctuation_sp whitespace ));

while (my $line = <>) {
    $line = $lossy->process($line);
    print $line;
}
# We add a newline at the very very end, just to be nice
print "\n";
